<!DOCTYPE html>
<html>
<head>
  <title>add Campaign</title>
  <link rel="stylesheet" type="text/css" href="/../css/bootstrap.min.css">
  <script type="text/javascript" src="/../js/bootstrap.min.js"></script>

</head>
<body>
  <div class="container">
    <div class="panel panel-default">
     
      <!-- Default panel contents -->
      <div class="panel-heading"><%=page_title%></div>
      <div class="panel-body">


         <!-- form add campaign -->
        <form class="form-horizontal" role="form" method="post" action="/webdonasi/tambah">
          <div class="form-group">
            <label for="id_cpg1" class="col-sm-2 control-label">ID Campaign</label>
            <div class="col-sm-10">
              <input type="text" name="id_cpg1" class="form-control" id="id_cpg1" placeholder="Id Campaign">
            </div>
          </div>
          <div class="form-group">
            <label for="judul_cpg1" class="col-sm-2 control-label">Judul Campaign</label>
            <div class="col-sm-10">
              <input type="text" name="judul_cpg1" class="form-control" id="judul_cpg1" placeholder="Judul Campaign">
            </div>
          </div>
          <div class="form-group" >
            <label for="foto_cpg1" class="col-sm-2 control-label">Foto Campaign</label>
            <div class="col-sm-10">
              <input type="file" name="foto_cpg1" class="form-control" id="foto_cpg1" placeholder="Foto Campaign" style="height: 50px">
            </div>
          </div>

  <!--  <input type="submit" value="Upload"> -->


          <div class="form-group">
            <label for="desc_cpg1" class="col-sm-2 control-label">Deskripsi</label>
            <div class="col-sm-10">
              <textarea class="form-control" name="desc_cpg1" id="desc_cpg1" placeholder="Deskripsi"></textarea>
            </div>
          </div>

          <div class="form-group">
            <label for="start_cpg1" class="col-sm-2 control-label">Start Campaign</label>
            <div class="col-sm-10">
              <input type="date" name="start_cpg1" class="form-control" id="start_cpg1" placeholder="Start Campaign">
            </div>
          </div>

           <div class="form-group">
            <label for="deadline_cpg1" class="col-sm-2 control-label">Deadline Campaign</label>
            <div class="col-sm-10">
              <input type="date" name="deadline_cpg1" class="form-control" id="deadline_cpg1" placeholder="Deadline Campaign">
            </div>
          </div>

          <div class="form-group">
            <label for="target_cpg1" class="col-sm-2 control-label">Target Campaign</label>
            <div class="col-sm-10">
              <input type="text" name="arget_cpg1" class="form-control" id="target_cpg1" placeholder="Target Campaign">
            </div>
          </div>

          <div class="form-group">
            <label for="income_cpg1" class="col-sm-2 control-label">Income Campaign</label>
            <div class="col-sm-10">
              <input type="text" name="income_cpg1" class="form-control" id="income_cpg1" placeholder="Income Campaign">
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Save">
            </div>
          </div>
          
        </form>
        <!--  -->


      </div>
    </div>

  </body>